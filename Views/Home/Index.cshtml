@{
    ViewBag.Title = "Home page";
}

<div class="row" ng-controller="TestMy">
    <br />
    <b>SEARCHING</b><br/><br/>
    <label>Id:</label>
    <input type="text" ng-Model="searchId" class="form-control">
    <label>First name:</label>
    <input type="text" ng-Model="searchFirstName" class="form-control">
    <label>Last name:</label>
    <input type="text" ng-Model="searchLastName" class="form-control">
    <label>Phone number:</label>
    <input type="text" ng-Model="searchPhoneNum" class="form-control">
    <label>Address:</label>
    <input type="text" ng-Model="searchAddress" class="form-control">
    <br />
    <button type="button" class="btn btn-primary" ng-click="search()">Search</button>

    <button type="button" class="btn btn-primary" ng-click="GetData()">GetData</button>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Id</th>
            <th>Phone number</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <tr ng-repeat="x in items2">
            <td>{{ x.Id }}</td>
            <td>{{ x.PhoneNum }}</td>
            <td>{{ x.FirstName }}</td>
            <td>{{ x.LastName }}</td>
            <td>{{ x.Address }}</td>
            <td>
                <a class="btn btn-danger" ng-click="removeClient(x)">Delete</a>
                <a class="btn btn-primary" ng-click="view(x)">View</a>
                <a class="btn btn-success" ng-click="edit(x)">Edit</a>
            </td>
        </tr>
    </table>
</div>

<script src="~/Scripts/ContactBook/HomeIndexController.js"></script>